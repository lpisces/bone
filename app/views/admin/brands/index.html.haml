.page-header
  %h4 品牌 列表

%table.table.table-bordered.table-striped
  %tr
    %th{:style => 'width:60px;'} Logo
    %th{:style => 'width:80px;'} 名称
    %th{:style => 'width:300px;'} 简介
    %th{:style => 'width:300px;'} 描述
    %th

  - @brands.each do |brand|
    %tr
      %td
        %img{:src => brand.logo.url, :style => 'width:50px;height:50px;'}
      %td= brand.name
      %td= brand.summary.html_safe
      %td= brand.description.html_safe
      %td 
        = link_to '展示', brand, :class => 'btn btn-mini'
        \|
        = link_to '修改', edit_brand_path(brand), :class => 'btn btn-mini btn-primary'
        \|
        = link_to '删除', brand, :method => :delete, :data => { :confirm => '你确定吗?' }, :class => 'btn btn-mini btn-danger'

%br

= link_to '新增 品牌', new_brand_path, :class => 'btn btn-mini btn-success'
