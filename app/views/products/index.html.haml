.page-header
  %h4 products列表

%table.table.table-bordered.table-striped
  %tr
    %th Title
    %th Price
    %th Coupon price
    %th Pic url
    %th Click url
    %th Shop click url
    %th Detail
    %th Volume
    %th

  - @products.each do |product|
    %tr
      %td= product.title
      %td= product.price
      %td= product.coupon_price
      %td= product.pic_url
      %td= product.click_url
      %td= product.shop_click_url
      %td= product.detail
      %td= product.volume
      %td 
        = link_to '展示', product, :class => 'btn btn-mini'
        \|
        = link_to '修改', edit_product_path(product), :class => 'btn btn-mini btn-primary'
        \|
        = link_to '删除', product, :method => :delete, :data => { :confirm => '你确定吗?' }, :class => 'btn btn-mini btn-danger'

%br

= link_to '新增 Product', new_product_path, :class => 'btn btn-mini btn-success'
