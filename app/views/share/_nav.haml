.navbar
  .navbar-inner
    %a.brand{:href => "/"}= App.site_name
    %ul.nav
      - if self.controller_name.to_s == 'category'
        %li.active
          %a{:href => category_map_path} 分类
      - else
        %li
          %a{:href => category_map_path} 分类
    %ul.nav
      - if admin?
        - if self.controller_name.to_s == 'users'
          %li.active
            %a{:href => users_path} 用户管理
        - else
          %li
            %a{:href => users_path} 用户管理
    
        - if self.controller_name.to_s == 'brands'
          %li.active
            %a{:href => brands_path} 品牌管理
        - else 
          %li
            %a{:href => brands_path} 品牌管理
    
        - if self.controller_name.to_s == 'categories'
          %li.active
            %a{:href => categories_path} 类别管理
        - else 
          %li
            %a{:href => categories_path} 类别管理
  
        - if self.controller_name.to_s == 'products'
          %li.active
            %a{:href => products_path} 商品管理
        - else 
          %li
            %a{:href => products_path} 商品管理

    %ul.nav.pull-right
      - if signed_in?
        %li
          %a{:href => profile_path}= "<i class='icon-user'></i>#{current_user.name}".html_safe
        %li
          %a{:href => signout_path}= "<i class='icon-hand-right'></i><small>退出</small>".html_safe
      - else 
        %li
          %a{:href => signin_path}= "<i class='icon-chevron-right'></i><small>登录</small>".html_safe 
        %li
          %a{:href => signup_path}= "<i class='icon-plus-sign'></i><small>注册</small>".html_safe
